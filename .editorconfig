# EditorConfig file for defining coding styles across the project.

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

# Settings for markdown files
[*.md] # Markdown files
trim_trailing_whitespace = false

# Settings for HTML files
[**.html] # HTML files
insert_final_newline = false

# Settings for YAML files
[{*.yml, *.yaml}] # YAML files
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

